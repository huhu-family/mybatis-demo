<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.pagoda.huhu.dao.DemoDao">

    <resultMap id="BaseResultMap" type="com.pagoda.huhu.entity.DemoDO">
        <id column="id" property="id"/>
        <id column="name" property="name"/>
        <result column="age" property="age"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, age
    </sql>

    <insert id="save" parameterType="com.pagoda.huhu.entity.DemoDO"
            keyProperty="id" useGeneratedKeys="true">
      INSERT INTO `demo` (`name`, `age`) VALUES (#{name}, #{age})
    </insert>

    <insert id="saveOrUpdate" parameterType="com.pagoda.huhu.entity.DemoDO">
      INSERT INTO `demo` (`id`, `name`, `age`) VALUES (#{id}, #{name}, #{age})
      ON DUPLICATE KEY UPDATE `name` = values(name), `age` =values(age)
    </insert>


    <select id="find" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from demo where id=#{id}
    </select>


</mapper>